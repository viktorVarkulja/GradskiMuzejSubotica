@using Microsoft.AspNetCore.Mvc;
@{
	ViewData["Title"] = "Radnik";
	Layout = "_RadnikLayout";
	string success = (String)TempData["Success"];
	var error = TempData["Error"];
	var korisnikId = ViewData["KorisnikId"];
}
<div class="d-flex justify-content-center">
	<h1>
		Radnik
	</h1>
</div>
@{
	if (success != null)
	{
		<div class="row">
			<div class="alert alert-success" role="alert">
				@success
			</div>
		</div>
	}
	if (error != null)
	{
		<div class="row">
			<div class="alert alert-danger" role="alert">
				@error
			</div>
		</div>
	}
}

<div class="row">
	<div class="col-md-6">
		<div class="card">
			<div class="card-header">
				Predmeti
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<a class="dropdown-item" asp-area=""
					   asp-controller="Racun" asp-action="SearchRacun">Pretraga računa</a>
				</li>
				<li class="list-group-item">
					<a class="dropdown-item" asp-area=""
					   asp-controller="Racun" asp-action="SetUsluga" asp-route-korisnik="@korisnikId">Kreiranje novog računa za uslugu</a>
				</li>
				<li class="list-group-item">
					<a class="dropdown-item" asp-area=""
					   asp-controller="Racun" asp-action="SearchRacunForDelete">Storniranje računa za uslugu</a>
				</li>
			</ul>
		</div>
	</div>
	</div>
</div>


