@model GradskiMuzejSubotica_ZavrsniRad.Models.ViewModel.SearchPredmetViewModel

@{
    ViewData["Title"] = "Pretraga predmeta";
    Layout = "_StrucnjakLayout";
    var searchError = ViewData["SearchError"];
}

<h1>Pretraga predmeta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchForListPredmet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchType" class="control-label"></label>
                <select asp-for="SearchType" class="form-control">
                    <option value="1">Inventarski broj</option>
                    <option value="2">Šifra zbirke</option>
                    <option value="3">Naziv</option>
                </select>
                <span asp-validation-for="SearchType" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="SearchName" class="control-label"></label>
                <input asp-for="SearchName" class="form-control" />
                <span asp-validation-for="SearchName" class="text-danger"></span>
                @{
                    if (searchError != null)
                    {
                        <span asp-validation-for="SearchName" class="text-danger">@searchError</span>
                    }
                }
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Proveri" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
