@model GradskiMuzejSubotica_ZavrsniRad.Models.ViewModel.SetPredmetIdViewModel

@{
    ViewData["Title"] = "Unos Predmeta";
    var odeljError = ViewData["OdeljError"];
    var idError = ViewData["IdError"];
    Layout = "_StrucnjakLayout";
}

<h1>Unesite inventarski broj i odeljenje</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetPredmetId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
                @if (idError != null)
                {
                    <span asp-validation-for="Id" class="text-danger">
                        @idError
                    </span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Odelj" class="control-label"></label>
                <select asp-for="Odelj" class="form-control" asp-items="@(new SelectList(ViewBag.Odeljenja,"Id", "Name"))">
                    <option value="-1">---Izaberite odeljenje---</option>
                </select>
                <span asp-validation-for="Odelj" class="text-danger"></span>
                @if (odeljError != null) 
                {
                    <span asp-validation-for="Odelj" class="text-danger">
                        @odeljError
                    </span>
                }
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Unesi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
