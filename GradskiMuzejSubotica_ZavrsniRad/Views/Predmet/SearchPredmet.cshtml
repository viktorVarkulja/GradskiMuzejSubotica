@model GradskiMuzejSubotica_ZavrsniRad.Models.ViewModel.SearchPredmetViewModel

@{
    ViewData["Title"] = "Pretraga Predmet";
    var action = ViewData["Action"];
    var korisnik = ViewData["Korsinik"];
    var errorSearch = ViewData["ErrorSearch"];
    Layout = "_StrucnjakLayout";
}

<h1>Pretraga predmeta</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchPredmet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="SearchType" class="control-label"></label>
                <input asp-for="SearchType" class="form-control" value="@action" readonly/>
                <span asp-validation-for="SearchType" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Korisnik" class="control-label"></label>
                <input asp-for="Korisnik" class="form-control" value="@korisnik" readonly />
                <span asp-validation-for="Korisnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchName" class="control-label">Unesite inventarski broj</label>
                <input asp-for="SearchName" class="form-control" />
                <span asp-validation-for="SearchName" class="text-danger"></span>
                @if(errorSearch!=null)
                {
                    <span asp-validation-for="SearchName" class="text-danger">@errorSearch</span>
                }
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Pretraga" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
